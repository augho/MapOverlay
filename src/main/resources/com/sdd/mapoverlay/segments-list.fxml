<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="580.0" prefWidth="288.0" spacing="30.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sdd.mapoverlay.SegmentsListController">
   <ListView fx:id="segmentsListView" prefHeight="195.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="32.0">
      <children>
           <Button fx:id="deleteButton" disable="true" onAction="#onDeleteButtonClick" styleClass="big-btn" text="Delete" />
         <Button fx:id="undoButton" onAction="#onUndoButtonClick" styleClass="big-btn" text="Undo" />
      </children>
   </HBox>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>
